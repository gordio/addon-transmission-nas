{
    "name": "Transmission NAS",
    "version": "1.0.1",
    "slug": "transmission-nas",
    "description": "The torrent client for Home Assistant with OpenVPN and Samba Share support",
    "url": "https://github.com/marciogranzotto/addon-transmission-nas",
    "webui": "http://[HOST]:[PORT:9091]/transmission/web/",
    "image": "marciogranzotto/addon-transmission-nas-{arch}",
    "startup": "services",
    "ingress": "true",
    "ingress_port": 8099,
    "panel_icon": "mdi:car-shift-pattern",
    "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
    "map": [
      "media:rw",
      "config:rw",
      "share:rw",
      "ssl"
    ],
    "boot": "auto",
    "ports": {
      "9091/tcp": null,
      "51413/tcp": 51413,
      "51413/udp": 51413
    },
    "ports_description": {
      "9091/tcp": "Web UI port (Not required for Ingress)",
      "51413/tcp": "Peer port (setup port forwarding to this port)",
      "51413/udp": "Peer port (setup port forwarding to this port)"
    },
    "privileged": [
      "SYS_ADMIN","DAC_READ_SEARCH"
    ],
    "full_access": true,
    "devices": [
      "/dev/net/tun:/dev/net/tun:rwm"
    ],
    "hassio_api": true,
    "hassio_role": "default",
    "homeassistant_api": false,
    "host_network": false,
    "options": {
      "log_level": "info",
      "authentication_required": false,
      "username": "",
      "password": "",
      "openvpn_enabled": false,
      "openvpn_config": "",
      "openvpn_username": "",
      "openvpn_password": "",
      "networkdisks": ["<//SERVER/SHARE>"],
      "cifsusername": "<username>",
      "cifspassword": "<password>",
      "cifsversion": ""
    },
    "schema": {
      "log_level": "match(^(trace|debug|info|notice|warning|error|fatal)$)",
      "authentication_required": "bool",
      "username": "str",
      "password": "str",
      "openvpn_enabled": "bool",
      "openvpn_config": "str",
      "openvpn_username": "str",
      "openvpn_password": "str",
      "networkdisks": ["str"],
      "cifsusername": "str",
      "cifspassword": "str",
      "cifsversion": "list(3.0|2.1|2.0|1.0)?"
    },
    "environment": {
      "LOG_FORMAT": "{LEVEL}: {MESSAGE}"
    }
  }
